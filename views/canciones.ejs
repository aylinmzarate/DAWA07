<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Canciones</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      margin-bottom: 20px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      border-bottom: 1px solid #ddd;
      padding: 10px 0;
    }

    a {
      text-decoration: none;
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Canciones</h1>
    <ul>
      <% canciones.forEach(function(cancion) { %>
        <li>
          <strong>Título:</strong> <%= cancion.titulo %><br>
          <strong>Artista:</strong> <%= cancion.artista %><br>
          <strong>Género:</strong> <%= cancion.genero %><br>
          <strong>Año:</strong> <%= cancion.anio %><br>
        </li>
      <% }); %>
    </ul>
    <a href="/canciones/agregar">Agregar nueva canción</a>
  </div>
</body>
</html>